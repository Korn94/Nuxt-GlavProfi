{
  "extends": "./.nuxt/tsconfig.json",
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules", ".nuxt", "dist", ".git", ".output"],
  "compilerOptions": {
    "types": ["nuxt", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "~~/*": ["./"],
      "@@/*": ["./"],
      "vue": ["./node_modules/vue/dist/vue.d.ts"]
    }
  }
}
